{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

<div class="row" style="padding: 40px 0;">
    <div class="col-lg-3 col-sm-12">
        {# <h3 class="text-center">Catégories</h3> #}
        <ul class="list-group">
            {% for category in categories %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ category.title }}
                    <span class="badge bg-info rounded-pill">14</span>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="col-lg-9 col-sm-12">
        {# <h3 class="text-center">Articles</h3> #}
        <div class="row">
        <h3 class="text-center">Tous les articles</h3>
        {% for post in posts %}
            <div class="card" style="width: 18rem; margin: 20px;">
                <img src="assets/images/posts/{{ post.image }}" class="card-img-top" alt="{{ post.title }}">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <small>Le {{ post.createdAt | date("d/m/Y") }} à {{ post.createdAt | date("H:i") }}</small>
                    <hr>
                    <a href="{{ path('show', {'id':post.id}) }}" class="btn btn-primary">VOIR</a>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
