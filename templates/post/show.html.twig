{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}

    <div class="container" style="padding: 20px 0;">
        <h1 class="title p-1">{{ post.title }}</h1>
        <small>Le {{ post.createdAt | date("d/m/Y") }} Ã  {{ post.createdAt | date("H:i") }}</small>
        <div class="img-fluid">
            <img width="100%" src="/assets/images/posts/{{ post.image }}" alt="{{ post.title }}">
        </div>
        
        <p class="content text-justify">
            {{ post.content | raw }}
        </p>

        {% if post.iframe %}
            <div class="iframe container">
                <iframe src="{{ post.iframe }}" width="100%" height="400px"></iframe>
            </div>
        {% endif %}

        {% if post.photos %}
            {% for post.photo in post.photos %}
                <img src="/assets/images/posts/{{ post.photo }}.jpg" alt="{{ post.photo }}">
            {% endfor %}
        {% endif %}
        
        
    </div>

{% endblock %}
